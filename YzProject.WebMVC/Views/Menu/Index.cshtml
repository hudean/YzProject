<div class="layui-card">
    <div class="layui-card-header">
        菜单功能按钮管理
    </div>
    <div class="layui-card-body">

        <div class="layui-row" style="text-align:left">
            <form class="layui-form">
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label">菜单名称</label>
                        <div class="layui-input-block" style="width:515px">
                            <input id="serachMenuName" maxlength="50" required lay-verify="required" class="layui-input" placeholder="请输入菜单名称" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <label class="layui-form-label">功能类型</label>
                        <div class="layui-input-block" style="width:515px">
                            <select id="serachFunctionType" lay-verify="required" lay-filter="serachFunctionType">
                                <option value="">请选择</option>
                                <option value="0">导航菜单</option>
                                <option value="1">操作按钮</option>
                            </select>
                        </div>
                    </div>
                </div>
            </form>
            <button class="layui-btn" id="btnQuery">
                <i class="layui-icon layui-icon-search"></i>
                查询
            </button>
            <button class="layui-btn" id="btnAdd">
                <i class="layui-icon layui-icon-add-circle"></i>
                添加
            </button>
            <button class="layui-btn" id="btnRefresh">
                <i class="layui-icon layui-icon-refresh"></i>
                刷新
            </button>
            <script type="text/html" id="toolbarDemo">
                <div class="layui-btn-container">

                    <button class="layui-btn layui-btn-sm" lay-event="getCheckLength">批量删除</button>

                </div>
            </script>
            <table class="layui-hide" id="menuTable" lay-filter="menuTable"></table>
        </div>
    </div>
</div>
